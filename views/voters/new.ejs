<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center mb-4">Create voter account</h1>
  <div class="col-md-6 offset-md-3 mb-5">
    <form action="/voters" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="username">Student ID Number: </label>
        <input
          class="form-control"
          type="text"
          name="voter[username]"
          id="username"
          placeholder="eg. 18-556487"
          required
          autofocus
        />
        <div class="invalid-feedback">
          Please enter a valid student id-number
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="fullName">Full name: </label>
        <input
          class="form-control"
          type="text"
          name="voter[fullName]"
          id="fullName"
          placeholder="eg. John Doe"
          required
        />
        <div class="invalid-feedback">Please provide your full name</div>
      </div>

      <!-- Course & Year-Level : -->
      <div class="row">
        <div class="mb-3 col">
          <label class="form-label" for="course">Course: </label>
          <input
            class="form-control"
            type="course"
            name="voter[course]"
            id="course"
            placeholder="Provide your course"
            required
          />
          <div class="invalid-feedback">Please provide your course</div>
        </div>

        <div class="mb-3 col">
          <label class="form-label" for="yearLevel">Year Level: </label>
          <select
            class="form-select"
            aria-label="Default select example"
            name="voter[yearLevel]"
            id="yearLevel"
          >
            <option value="1st Year">1st Year</option>
            <option value="2nd Year">2nd Year</option>
            <option value="3rd Year">3rd Year</option>
            <option value="4th Year">4th Year</option>
            <option value="5th Year">5th Year</option>
          </select>
          <div class="invalid-feedback">Choose your year level</div>
        </div>
      </div>

      <!-- PASSWORD : -->
      <div class="mb-3">
        <label class="form-label" for="password">Password: </label>
        <input
          class="form-control"
          type="password"
          name="voter[password]"
          id="password"
          placeholder="Create a password"
          required
        />
        <div class="invalid-feedback">Please provide a valid password</div>
      </div>
      <!-- <div class="mb-3">
        <label class="form-label" for="lastName">Re-enter Password: </label>
        <input
          class="form-control"
          type="password"
          name="voter[lastName]"
          id="lastName"
          placeholder="Must match the password"
          required
        />
        <div class="invalid-feedback">Must match the password-field</div>
      </div> -->
      <div class="row">
        <div class="mb-3 d-grid col">
          <button class="btn btn-dark">Create Voter</button>
        </div>
        <!-- <div class="mb-3 d-grid col">
          <button class="btn btn-dark" disabled>Clear</button>
        </div> -->
      </div>
    </form>
    <hr />
    <div class="row">
      <a class="mb-3 text-center" href="/voters">Back to All Voters</a>
    </div>
  </div>
</div>
