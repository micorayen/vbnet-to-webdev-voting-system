<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center mb-4">Update voter account</h1>
  <div class="col-md-6 offset-md-3 mb-5">
    <form
      action="/voters/<%= voter._id %>?_method=PATCH"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="username">Student ID Number: </label>
        <input
          class="form-control"
          type="text"
          name="voter[username]"
          id="username"
          placeholder="eg. 18-556487"
          value="<%= voter.username %>"
          required
          autofocus
        />
        <div class="invalid-feedback">
          Please enter a valid student id-number
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="fullName">Full name: </label>
        <input
          class="form-control"
          type="text"
          name="voter[fullName]"
          id="fullName"
          placeholder="eg. John Doe"
          value="<%= voter.fullName %>"
          required
        />      <div class="invalid-feedback">Please provide your full name</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="course">Course: </label>
        <input
          class="form-control"
          type="course"
          name="voter[course]"
          id="course"
          placeholder="Provide your course"
          value="<%= voter.course %>"
          required
        />
        <div class="invalid-feedback">Please provide a valid course</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="yearLevel">Year Level: </label>
        <select
          class="form-select"
          aria-label="Default select example"
          name="voter[yearLevel]"
          id="yearLevel"
        >
          <option value="1st Year" <%= voter.yearLevel  === '1st Year' ? 'selected':''%>>1st Year</option>
          <option value="2nd Year" <%= voter.yearLevel  === '2nd Year' ? 'selected':''%>>2nd Year</option>
          <option value="3rd Year" <%= voter.yearLevel  === '3rd Year' ? 'selected':''%>>3rd Year</option>
          <option value="4th Year" <%= voter.yearLevel  === '4th Year' ? 'selected':''%>>4th Year</option>
          <option value="5th Year" <%= voter.yearLevel  === '5th Year' ? 'selected':''%>>5th Year</option>
        </select>
        <div class="invalid-feedback">Choose your year level</div>
      </div>

      <div class="mb-3 d-grid">
        <button class="btn btn-dark">Update Voter</button>
      </div>
    </form>
    <hr />
    <div class="row">
      <a class="mb-3 text-center" href="/voters">Back to all voters</a>
    </div>
  </div>
</div>
